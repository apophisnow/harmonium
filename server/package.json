{
  "name": "@harmonium/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=../.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:push": "set -a && . ../.env && set +a && NODE_OPTIONS='--import tsx' drizzle-kit push",
    "db:generate": "set -a && . ../.env && set +a && NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "db:migrate": "set -a && . ../.env && set +a && NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:studio": "set -a && . ../.env && set +a && NODE_OPTIONS='--import tsx' drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.0.0",
    "@harmonium/shared": "*",
    "argon2": "^0.41.0",
    "drizzle-orm": "^0.36.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.0",
    "ioredis": "^5.4.0",
    "mediasoup": "^3.15.0",
    "nodemailer": "^8.0.1",
    "postgres": "^3.4.0",
    "sharp": "^0.33.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
